// Prisma Schema für SME Dashboard
// Neon PostgreSQL Datenbank

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
// Rollen: superadmin/agentur (volle Rechte), member (bearbeiten), viewer (nur lesen)
model User {
  id            String        @id @default(cuid())
  name          String?
  email         String        @unique
  emailVerified DateTime?
  image         String?
  role          String        @default("member") // superadmin, agentur, member, viewer
  accounts      Account[]
  sessions      Session[]
  gscProperties GSCProperty[]
  snapshots     Snapshot[]
  seoMaturity   SEOMaturity[]
  rankTrackers  RankTracker[]
  kvpUrls       KVPUrl[]
  kvpAssignments KVPAssignee[] // KVPs zu denen der User zugewiesen ist
  tickets       Ticket[]
  ticketAssignments TicketAssignee[] @relation("TicketAssignee") // Tickets die dem User zugewiesen sind
  briefingsRequested Briefing[] @relation("BriefingRequester") // Briefings die der User bestellt hat
  briefingsAssigned  Briefing[] @relation("BriefingAssignee")  // Briefings die der User bearbeitet
  tasksCreated  Task[]         @relation("TaskCreator") // Tasks die der User erstellt hat
  taskAssignments TaskAssignee[] @relation("TaskAssignee") // Tasks die dem User zugewiesen sind
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier    String
  token         String   @unique
  expires       DateTime
  usesRemaining Int      @default(2) // Erlaubt 2 Nutzungen (für Mail-Scanner-Schutz)

  @@unique([identifier, token])
}

// GSC Property Model
model GSCProperty {
  id          String     @id @default(cuid())
  siteUrl     String
  displayName String?
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  isDefault   Boolean    @default(false)
  snapshots   Snapshot[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([userId, siteUrl])
}

// Snapshot Model - Speichert GSC Daten für historische Analysen
model Snapshot {
  id          String         @id @default(cuid())
  name        String // z.B. "KW 50 2024" oder "Dezember Report"
  description String?
  propertyId  String
  property    GSCProperty    @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  userId      String
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  startDate   DateTime
  endDate     DateTime
  data        SnapshotData[]
  totals      Json // Aggregierte Daten: clicks, impressions, ctr, position
  createdAt   DateTime       @default(now())

  @@index([propertyId])
  @@index([userId])
}

// Snapshot Data - Einzelne Datenzeilen
model SnapshotData {
  id          String   @id @default(cuid())
  snapshotId  String
  snapshot    Snapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)
  dimension   String // "query", "page", "country", "device", "date", "query_page"
  key         String // Der Wert der Dimension (z.B. das Keyword, die URL, etc.)
  pageUrl     String? // Für query_page Dimension: die zugehörige URL
  clicks      Int
  impressions Int
  ctr         Float
  position    Float

  @@index([snapshotId, dimension])
  @@index([snapshotId, pageUrl])
}

// SEO Reifegrad Model
model SEOMaturity {
  id          String            @id @default(cuid())
  userId      String
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String // Name der Analyse (z.B. "Q1 2024")
  description String?
  items       SEOMaturityItem[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([userId])
}

// SEO Reifegrad Item - Einzelne Checklistenpunkte
model SEOMaturityItem {
  id          String                  @id @default(cuid())
  maturityId  String
  maturity    SEOMaturity             @relation(fields: [maturityId], references: [id], onDelete: Cascade)
  category    String // Kategorie (z.B. "Technische SEO", "Content", etc.)
  title       String // Titel des Punktes
  description String? // Beschreibung
  score       Int                     @default(1) // Bewertung 1-10
  priority    String?                 // Priorität: A, B, C, D
  order       Int                     @default(0) // Reihenfolge innerhalb der Kategorie
  teams       SEOMaturityItemTeam[]   // Zuständige Teams
  kvpLinks    KVPMaturityItemLink[]   // Verknüpfung zu KVP-URLs
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt

  @@index([maturityId, category])
}

// Team Model - Zuständige Teams für SEO Checkpunkte
model Team {
  id        String                  @id @default(cuid())
  name      String                  @unique // "Content Factory", "SEO & Onsite-Steering", "Channels & Plattform"
  items     SEOMaturityItemTeam[]
  createdAt DateTime                @default(now())
  updatedAt DateTime                @updatedAt
}

// Many-to-Many Beziehung zwischen SEOMaturityItem und Team
model SEOMaturityItemTeam {
  id        String            @id @default(cuid())
  itemId    String
  item      SEOMaturityItem   @relation(fields: [itemId], references: [id], onDelete: Cascade)
  teamId    String
  team      Team              @relation(fields: [teamId], references: [id], onDelete: Cascade)
  createdAt DateTime          @default(now())

  @@unique([itemId, teamId])
  @@index([itemId])
  @@index([teamId])
}

// Rank Tracker Model
model RankTracker {
  id        String               @id @default(cuid())
  userId    String
  user      User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String               @default("Standard Tracker")
  location  String               @default("Switzerland") // Standort für Rankings
  language  String               @default("German") // Sprache für Rankings
  keywords  RankTrackerKeyword[]
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt

  @@index([userId])
}

// Rank Tracker Keyword - Keywords die getrackt werden
model RankTrackerKeyword {
  id                String               @id @default(cuid())
  trackerId         String
  tracker           RankTracker          @relation(fields: [trackerId], references: [id], onDelete: Cascade)
  keyword           String
  category          String? // Kategorie: Mortgages, Accounts&Cards, Investing, Pension, Digital Banking
  targetUrl         String? // Optional: URL für die das Keyword getrackt werden soll
  searchVolume      Int? // Monatliches Suchvolumen von DataForSEO
  searchVolumeUpdatedAt DateTime? // Zeitpunkt der letzten Suchvolumen-Aktualisierung
  rankings          RankTrackerRanking[]
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  @@unique([trackerId, keyword])
  @@index([trackerId])
  @@index([category])
}

// Rank Tracker Ranking - Historische Rankings
model RankTrackerRanking {
  id        String             @id @default(cuid())
  keywordId String
  keyword   RankTrackerKeyword @relation(fields: [keywordId], references: [id], onDelete: Cascade)
  position  Int? // Ranking Position (null wenn nicht gefunden)
  url       String? // URL die rankt
  date      DateTime           @default(now())
  createdAt DateTime           @default(now())

  @@index([keywordId, date])
  @@index([date])
}

// UBS KVP (Kontinuierlicher Verbesserungsprozess) Model
model KVPUrl {
  id           String                @id @default(cuid())
  userId       String
  user         User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  url          String                @db.Text
  focusKeyword String                // Fokuskeyword für die URL
  category     String?               // Kategorie: Mortgages, Accounts&Cards, Investing, Pension, Digital Banking
  comment      String?               @db.Text // Kommentarfeld (deprecated, wird durch KVPComment ersetzt)
  subkeywords  KVPSubkeyword[]
  comments     KVPComment[]
  files        KVPFile[]             // Hochgeladene Dateien (Vercel Blob)
  maturityLinks KVPMaturityItemLink[] // Verknüpfung zu SEO-Reifegradpunkten
  assignees    KVPAssignee[]         // Zugewiesene Nutzer (Verantwortlichkeiten)
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt

  @@index([userId])
  @@index([category])
}

// KVP Nutzerzuweisungen - Many-to-Many zwischen KVPUrl und User
model KVPAssignee {
  id        String   @id @default(cuid())
  kvpUrlId  String
  kvpUrl    KVPUrl   @relation(fields: [kvpUrlId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([kvpUrlId, userId])
  @@index([kvpUrlId])
  @@index([userId])
}

// KVP-Reifegrad-Verknüpfung: Many-to-Many zwischen KVPUrl und SEOMaturityItem
model KVPMaturityItemLink {
  id              String          @id @default(cuid())
  kvpUrlId        String
  kvpUrl          KVPUrl          @relation(fields: [kvpUrlId], references: [id], onDelete: Cascade)
  maturityItemId  String
  maturityItem    SEOMaturityItem @relation(fields: [maturityItemId], references: [id], onDelete: Cascade)
  createdAt       DateTime        @default(now())

  @@unique([kvpUrlId, maturityItemId])
  @@index([kvpUrlId])
  @@index([maturityItemId])
}

// UBS KVP Subkeywords - Beliebig viele Subkeywords pro URL
model KVPSubkeyword {
  id        String   @id @default(cuid())
  urlId     String
  url       KVPUrl   @relation(fields: [urlId], references: [id], onDelete: Cascade)
  keyword   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([urlId])
}

// UBS KVP Kommentare - Beliebig viele Kommentare pro URL
model KVPComment {
  id        String   @id @default(cuid())
  urlId     String
  url       KVPUrl   @relation(fields: [urlId], references: [id], onDelete: Cascade)
  text      String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([urlId])
}

// KVP Dateien - Hochgeladene Dateien via Vercel Blob
model KVPFile {
  id        String   @id @default(cuid())
  urlId     String
  url       KVPUrl   @relation(fields: [urlId], references: [id], onDelete: Cascade)
  fileName  String   // Originaler Dateiname
  fileUrl   String   @db.Text // Vercel Blob URL
  fileSize  Int      // Dateigröße in Bytes
  fileType  String   // MIME-Type (z.B. image/png, application/pdf)
  createdAt DateTime @default(now())

  @@index([urlId])
}

// Ticket System für Bugs und Feature-Wünsche
model Ticket {
  id          String         @id @default(cuid())
  userId      String
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  description String         @db.Text
  type        String         // "bug" oder "feature"
  status      String         @default("open") // "open", "in_progress", "closed"
  priority    String         @default("medium") // "low", "medium", "high"
  comments    TicketComment[]
  assignees   TicketAssignee[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([userId])
  @@index([type])
  @@index([status])
}

// Ticket Zuweisungen (many-to-many)
model TicketAssignee {
  id        String   @id @default(cuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation("TicketAssignee", fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([ticketId, userId])
  @@index([ticketId])
  @@index([userId])
}

// Ticket Kommentare
model TicketComment {
  id        String   @id @default(cuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId    String
  text      String   @db.Text
  createdAt DateTime @default(now())

  @@index([ticketId])
}

// Briefing System - SEO Content Briefings
model Briefing {
  id                String   @id @default(cuid())
  
  // Beziehungen
  requesterId       String   // User der das Briefing bestellt hat (member)
  requester         User     @relation("BriefingRequester", fields: [requesterId], references: [id], onDelete: Cascade)
  assigneeId        String?  // User der das Briefing bearbeitet (agentur)
  assignee          User?    @relation("BriefingAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  
  // Status
  status            String   @default("ordered") // ordered, in_progress, in_review, completed
  briefingNumber    Int      @default(autoincrement()) // Automatische Briefing-Nr.
  
  // Briefing-Typ (Vorlage)
  briefingType      String   @default("new_content") // "new_content" | "edit_content" | "lexicon"
  
  // Kategorie - gleiche wie bei KVP (Mortgages, Accounts&Cards, Investing, Pension, Digital Banking)
  category          String?  // Kategorie für bessere Zuordnung und Auswertung
  
  // Grunddaten
  title             String   // Briefing-Titel
  contentAction     String   // "edit" | "merge" | "new" - Content überarbeiten/mergen/neu erstellen
  targetAudience    String?  @db.Text // Zielgruppe
  funnelStage       String?  // "attention" | "interest" | "desire" | "action"
  goals             String?  @db.Text // Ziele / KPIs (User Story)
  
  // Keywords & Cluster
  focusKeyword      String?  // Fokus-Keyword
  keywordCluster    String?  @db.Text // Keyword-Cluster
  topicCluster      String?  @db.Text // Topic-Cluster
  searchIntent      String?  // "informational" | "navigational" | "transactional" | "commercial"
  
  // URLs
  url               String?  @db.Text // URL
  benchmarkUrls     String?  @db.Text // Benchmark (2 Wettbewerber URLs)
  csArticle         String?  @db.Text // CS Artikel (wenn vorhanden)
  
  // Content-Aufbau (wird von Agentur ausgefüllt)
  titleTag          String?  @db.Text // Title Tag
  metaDescription   String?  @db.Text // Meta Description
  navTitle          String?  // Navigationstitel (analog H1)
  h1                String?  // H1
  mainParagraph     String?  @db.Text // Hauptparagraf
  primaryCta        String?  @db.Text // Primary CTA
  secondaryCta      String?  @db.Text // Secondary CTA auf weiterführende Seite
  inboundCta        String?  @db.Text // Inbound CTA auf diese Seite
  keywordsetLongtail String? @db.Text // Keywordset/Longtail Keywords
  topicclusterContent String? @db.Text // Topiccluster für Content
  bodyContent       String?  @db.Text // Fliesstext/Struktur (H2 – H4)
  internalLinks     String?  @db.Text // Interne Verlinkungen
  missingTopics     String?  @db.Text // Missing Topics
  faqs              String?  @db.Text // FAQs zum Thema
  notes             String?  @db.Text // Bemerkungen
  
  // Mehrsprachigkeit
  titleEn           String?  // EN Titel
  titleFr           String?  // FR Titel
  titleIt           String?  // IT Titel
  
  // Lexikon-spezifische Felder
  lexiconDefinition String?  @db.Text // Kurze Definition des Begriffs (1-2 Sätze)
  lexiconSynonyms   String?  @db.Text // Synonyme / alternative Begriffe
  lexiconRelated    String?  @db.Text // Verwandte Begriffe / Themen
  
  // Grafische Darstellung - KI-generiertes Schaubild basierend auf bodyContent
  diagramUrl        String?  @db.Text // URL zum generierten Diagramm in Vercel Blob
  
  // Deadline - automatisch 10 Tage nach Bestellung, änderbar durch Agentur
  deadline          DateTime?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([requesterId])
  @@index([assigneeId])
  @@index([status])
  @@index([briefingType])
  @@index([category])
}

// Task Management - Kanban Board
model Task {
  id          String         @id @default(cuid())
  title       String
  description String?        @db.Text
  status      String         @default("backlog") // backlog, todo, in_progress, review, done
  priority    String         @default("medium") // low, medium, high, urgent
  order       Int            @default(0) // Reihenfolge innerhalb der Spalte
  dueDate     DateTime?
  category    String?        // Kategorie: Mortgages, Accounts&Cards, Investing, Pension, Digital Banking
  labels      String[]       // Zusätzliche Labels/Tags
  creatorId   String
  creator     User           @relation("TaskCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  assignees   TaskAssignee[] // Mehrere zugewiesene Bearbeiter
  comments    TaskComment[]
  files       TaskFile[]     // Hochgeladene Dateien (Vercel Blob)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([creatorId])
  @@index([status])
  @@index([priority])
  @@index([category])
  @@index([status, order])
}

// Task Zuweisungen - Many-to-Many zwischen Task und User
model TaskAssignee {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation("TaskAssignee", fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([taskId, userId])
  @@index([taskId])
  @@index([userId])
}

// Task Kommentare
model TaskComment {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId    String
  text      String   @db.Text
  createdAt DateTime @default(now())

  @@index([taskId])
}

// Task Dateien - Hochgeladene Dateien via Vercel Blob
model TaskFile {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  fileName  String   // Originaler Dateiname
  fileUrl   String   @db.Text // Vercel Blob URL
  fileSize  Int      // Dateigröße in Bytes
  fileType  String   // MIME-Type (z.B. image/png, application/pdf)
  createdAt DateTime @default(now())

  @@index([taskId])
}

// Changelog Zeiterfassung - Minuten pro Commit
model ChangelogTime {
  id         String   @id @default(cuid())
  commitHash String   @unique // Git Commit Hash (short oder full)
  minutes    Int      @default(30) // Aufwand in Minuten
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([commitHash])
}

// Linkprofil - Gespeicherte Backlink-Daten von DataForSEO
// Target ist immer ubs.com (hardcoded)
model BacklinkProfile {
  id                       String   @id @default(cuid())
  target                   String   @default("ubs.com")
  totalBacklinks           Int      @default(0)
  totalReferringDomains    Int      @default(0)
  totalReferringMainDomains Int     @default(0)
  totalReferringIps        Int      @default(0)
  totalReferringSubnets    Int      @default(0)
  dofollow                 Int      @default(0)
  nofollow                 Int      @default(0)
  newBacklinks             Int      @default(0)
  lostBacklinks            Int      @default(0)
  backlinks                Backlink[]
  referringDomains         ReferringDomain[]
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt

  @@index([target])
}

// Einzelne Backlinks
model Backlink {
  id                 String          @id @default(cuid())
  profileId          String
  profile            BacklinkProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  domainFrom         String
  urlFrom            String          @db.Text
  urlTo              String          @db.Text
  tldFrom            String?
  rank               Int             @default(0)
  pageFromRank       Int             @default(0)
  domainFromRank     Int             @default(0)
  domainFromCountry  String?
  pageFromTitle      String?         @db.Text
  firstSeen          DateTime?
  lastSeen           DateTime?
  itemType           String?         // anchor, image, redirect, etc.
  dofollow           Boolean         @default(true)
  anchor             String?         @db.Text
  isNew              Boolean         @default(false)
  isLost             Boolean         @default(false)
  backlinkSpamScore  Int             @default(0)
  createdAt          DateTime        @default(now())

  @@index([profileId])
  @@index([domainFrom])
  @@index([dofollow])
  @@index([isNew])
  @@index([isLost])
}

// Referring Domains
model ReferringDomain {
  id                 String          @id @default(cuid())
  profileId          String
  profile            BacklinkProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  domain             String
  rank               Int             @default(0)
  backlinks          Int             @default(0)
  firstSeen          DateTime?
  backlinksSpamScore Int             @default(0)
  createdAt          DateTime        @default(now())

  @@unique([profileId, domain])
  @@index([profileId])
  @@index([rank])
}
