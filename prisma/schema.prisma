// Prisma Schema für SME Dashboard
// Neon PostgreSQL Datenbank

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model User {
  id            String        @id @default(cuid())
  name          String?
  email         String        @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  gscProperties GSCProperty[]
  snapshots     Snapshot[]
  seoMaturity   SEOMaturity[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// GSC Property Model
model GSCProperty {
  id          String     @id @default(cuid())
  siteUrl     String
  displayName String?
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  isDefault   Boolean    @default(false)
  snapshots   Snapshot[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([userId, siteUrl])
}

// Snapshot Model - Speichert GSC Daten für historische Analysen
model Snapshot {
  id          String         @id @default(cuid())
  name        String // z.B. "KW 50 2024" oder "Dezember Report"
  description String?
  propertyId  String
  property    GSCProperty    @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  userId      String
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  startDate   DateTime
  endDate     DateTime
  data        SnapshotData[]
  totals      Json // Aggregierte Daten: clicks, impressions, ctr, position
  createdAt   DateTime       @default(now())

  @@index([propertyId])
  @@index([userId])
}

// Snapshot Data - Einzelne Datenzeilen
model SnapshotData {
  id          String   @id @default(cuid())
  snapshotId  String
  snapshot    Snapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)
  dimension   String // "query", "page", "country", "device", "date", "query_page"
  key         String // Der Wert der Dimension (z.B. das Keyword, die URL, etc.)
  pageUrl     String? // Für query_page Dimension: die zugehörige URL
  clicks      Int
  impressions Int
  ctr         Float
  position    Float

  @@index([snapshotId, dimension])
  @@index([snapshotId, pageUrl])
}

// SEO Reifegrad Model
model SEOMaturity {
  id          String            @id @default(cuid())
  userId      String
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String // Name der Analyse (z.B. "Q1 2024")
  description String?
  items       SEOMaturityItem[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([userId])
}

// SEO Reifegrad Item - Einzelne Checklistenpunkte
model SEOMaturityItem {
  id          String      @id @default(cuid())
  maturityId  String
  maturity    SEOMaturity @relation(fields: [maturityId], references: [id], onDelete: Cascade)
  category    String // Kategorie (z.B. "Technische SEO", "Content", etc.)
  title       String // Titel des Punktes
  description String? // Beschreibung
  score       Int         @default(1) // Bewertung 1-10
  order       Int         @default(0) // Reihenfolge innerhalb der Kategorie
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([maturityId, category])
}
